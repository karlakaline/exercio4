inicio

caractere veiculo, pular, viaja, devagar, piloto, asas, voo;




escreva ("Seu veículo é aéreo?(s/n)");
leia ("veiculo");

se(veiculo = 's')

escreva ("Seu veículo precisa pular?(s/n)");
leia ("pular");

se(pular = 's')

escreva("Então, o transporte escolhido foi a asa delta.");
fimse

senão

